        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/estadisticas" Match="NavLinkMatch.All">
                <span class="oi oi-bar-chart" aria-hidden="true"></span> Estadisticas
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="lista-ventas" Match="NavLinkMatch.All">
                <span class="oi oi-cart" aria-hidden="true"></span> Ventas
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="lista-articulos">
                <span class="oi oi-list" aria-hidden="true"></span> Artículos
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="lista-clientes">
                <span class="oi oi-people" aria-hidden="true"></span> Clientes
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="lista-pedidos">
                <span class="oi oi-task" aria-hidden="true"></span> Pedidos
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="lista-pagos">
                <span class="oi oi-dollar" aria-hidden="true"></span> Pagos
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="cuentas">
                <span class="oi oi-briefcase" aria-hidden="true"></span> Cuentas Corrientes
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
