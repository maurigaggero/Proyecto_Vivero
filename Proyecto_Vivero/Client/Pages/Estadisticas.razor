@page "/estadisticas"
@inject HttpClient Http
@inject IJSRuntime JS

@using Proyecto_Vivero.Shared

@if (ventas == null)
{
    <div class="d-flex justify-content-between">
        <div class="spinner-grow text-success" role="status">
            <span class="sr-only">Cargando...</span>
        </div>
        <h2><b>Estadísticas</b></h2>
    </div>
}
else
{
    <div class="d-flex justify-content-end">
        <h2><b>Estadísticas</b></h2>
    </div>

    <div class="card mb-2">
        <a href="/lista-pedidos" style="color:inherit; text-decoration:none">
            <div class="card-body">
                <h6 class="card-title">Pedidos Pendientes</h6>
                <div class="m-2">
                    <div class="d-flex justify-content-end">
                        <text>Total</text>
                    </div>
                    @if (pedidospendientes > 0)
                    {
                        <div class="d-flex justify-content-between">
                            <div><h5 class="oi oi-warning" style="color:orange"></h5></div>
                            <h3>@pedidospendientes</h3>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex justify-content-end">
                            <h3>@pedidospendientes</h3>
                        </div>
                    }
                </div>
            </div>
        </a>
    </div>
}

<div class="card mb-2">
    <div id="ventas"></div>
</div>

<div class="card mb-2">
    <div id="ejercicio"></div>
</div>

@code {
    public int pedidospendientes { get; set; }
    decimal[] ejercicio { get; set; }
    decimal[] ventasAño { get; set; }

    public List<Venta> ventas { get; set; }

    protected override async Task OnInitializedAsync()
    {
        ventas = await Http.GetFromJsonAsync<List<Venta>>($"api/ventas");

        ejercicio = await Http.GetFromJsonAsync<decimal[]>($"api/estadisticas/ejercicio");
        ventasAño = await Http.GetFromJsonAsync<decimal[]>($"api/estadisticas/ventas");
        pedidospendientes = await Http.GetFromJsonAsync<int>("api/estadisticas/pendientes");

        MostrarEstadisticas();
    }

    void MostrarEstadisticas()
    {
        JS.InvokeVoidAsync("chart_line", ejercicio);
        JS.InvokeVoidAsync("chart_column", ventasAño);
    }
}